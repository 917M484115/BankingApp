@page
@model BankingApp.Pages.Investing.CryptoBasketPage
@using BankingApp.Aids.Reflection
@using BankingApp.Data.Investing
@using BankingApp.Pages.Common.Extensions

@{
    Layout = "_Details";
    string items = "/Shop/BasketItems";
    var basketId = GetMember.Name<CryptoBasketData>(x => x.CustomerID);
    var id = Model.Item.Id;
    var itemsUrl = new Uri($"{items}/Index?handler=index&fixedFilter={basketId}&fixedValue={id}", UriKind.Relative);
}

<partial name="_ShowBasket" />

@section Details {
    @Html.Link(new BankingApp.Pages.Common.Aids.Link(" | Show items", itemsUrl))
}
